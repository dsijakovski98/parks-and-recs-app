<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/ivh_parking_lot_icon"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp"
        android:contentDescription="@string/img_description"
        android:src="@drawable/ic_parking_lot_open_icon"
        app:layout_constraintBottom_toTopOf="@+id/divider2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvh_parking_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:layout_marginTop="4dp"
        android:text="TextView"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:textSize="17sp"
        app:layout_constraintStart_toEndOf="@+id/ivh_parking_lot_icon"
        app:layout_constraintTop_toTopOf="@+id/ivh_parking_lot_icon" />


    <TextView
        android:id="@+id/parking_spots_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/parking_spots_text"
        android:textColor="@color/black"
        android:textSize="12sp"
        app:layout_constraintStart_toStartOf="@+id/tvh_parking_name"
        app:layout_constraintTop_toBottomOf="@+id/tvh_parking_name" />

    <TextView
        android:id="@+id/tvh_parking_spots_open"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="2dp"
        android:text="0"
        android:textColor="@color/black"
        android:textSize="14sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/parking_spots_text"
        app:layout_constraintStart_toEndOf="@+id/parking_spots_text"
        app:layout_constraintTop_toTopOf="@+id/parking_spots_text" />

    <TextView
        android:id="@+id/tvh_parking_lot_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:text="TextView"
        android:textAppearance="@style/TextAppearance.AppCompat.Small"
        android:textColor="@color/parking_lot_open"
        android:textSize="11sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/tvh_parking_name"
        app:layout_constraintStart_toEndOf="@+id/tvh_parking_name" />

    <ImageView
        android:id="@+id/bvh_make_reservation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:background="@color/parking_lot_open"
        android:src="@drawable/ic_reserve_btn_icon"
        android:padding="5dp"
        app:layout_constraintBottom_toBottomOf="@+id/ivh_parking_lot_icon"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/ivh_parking_lot_icon" />

    <View
        android:id="@+id/divider2"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="?android:attr/listDivider"
        app:layout_constraintBottom_toBottomOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>