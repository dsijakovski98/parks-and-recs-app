<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.parksandrecs">

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>
    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_splash_screen_2_foreground"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_splash_screen_2_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.AppCompat.Light.NoActionBar">
        <activity android:name=".ConfirmReservationActivity"></activity>
        <activity android:name=".MakeReservationActivity" />
        <activity android:name=".CitiesActivity" />
        <activity android:name=".LoginRegisterActivity" />
        <activity android:name=".SplashScreen">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>